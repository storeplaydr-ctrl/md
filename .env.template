# Environment Variables Template
# Copy this to .env and fill in your values

# MongoDB connection string with your username and password
MONGODB_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@cluster0.xxxxx.mongodb.net/exnebula?retryWrites=true&w=majority&appName=Cluster0

# JWT Secret Key - use a long random string
JWT_SECRET=your-super-long-secret-key-here-at-least-32-characters

# Environment
NODE_ENV=production

# Port (Render will set this automatically)
PORT=3000
